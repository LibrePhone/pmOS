# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kcodecs
pkgver=5.48.0
pkgrel=0
pkgdesc='Provide a collection of methods to manipulate strings using various encodings'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL-2.1"
depends=""
makedepends="extra-cmake-modules qt5-qttools-dev gperf doxygen"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}
sha512sums="fc48ca509a397721aeef9af174b073a17895758fb595370ce6103640f53c20ddb9d375bbd81d7417a65342247c5a0cf4e52a9457d027dbe7e85431095cee739b  kcodecs-5.48.0.tar.xz"
