# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=plasma-pa
pkgver=5.13.3
pkgrel=0
pkgdesc='Plasma applet for audio volume management using PulseAudio'
arch="all"
url='https://www.kde.org/workspaces/plasmadesktop/'
license="GPL-2.0"
depends="pulseaudio"
makedepends="extra-cmake-modules qt5-qtbase-dev qt5-qtdeclarative-dev
		kcoreaddons-dev kdeclarative-dev kdoctools-dev kglobalaccel-dev
		ki18n-dev plasma-workspace-dev pulseaudio-dev libcanberra-dev gconf-dev"
source="https://download.kde.org/stable/plasma/${pkgver}/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

build() {
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=lib
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
sha512sums="deee784b383e4f7118d652b48fd9041dc6d099c2ad78a7dfbfb0a044f7a5fd934e7f3a446158b0e88bc2cbb58185f5c162aedb637def11092050ee187d61e1c6  plasma-pa-5.13.3.tar.xz"
