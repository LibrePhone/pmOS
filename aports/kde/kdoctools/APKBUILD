# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kdoctools
pkgver=5.47.0
pkgrel=0
pkgdesc='Documentation generation from docbook'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL-2.1"
depends="docbook-xsl"
depends_dev="qt5-qtbase-dev ki18n-dev karchive-dev libxslt-dev libxml2-dev libxml2-utils docbook-xml docbook-xsl"
makedepends="$depends_dev extra-cmake-modules perl-uri"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}


package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}

sha512sums="dd37ad49af0c0159692d2d24e0c206d757995b13afe5bb44a11295f6f397114b4dcbc75a0369b40cb9747e43c46f64fa77ac10cf13e4a54f52f07342703944c1  kdoctools-5.47.0.tar.xz"
