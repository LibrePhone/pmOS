# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kcoreaddons
pkgver=5.48.0
pkgrel=0
pkgdesc='Addons to QtCore'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL-2.1"
depends=""
makedepends="extra-cmake-modules qt5-qttools-dev doxygen shared-mime-info"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # armhf problems

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
		make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}
sha512sums="f828d9e4f011c10479611a6556ff04a6843a0473286188bc0f696a41ded466407d451691ce278f6acc0610a884339dd9caf9432d92e104a0d140493c38256263  kcoreaddons-5.48.0.tar.xz"
