pkgname=postmarketos-ui-plasma-desktop
pkgver=1
pkgrel=0
pkgdesc="(Wayland/X11) Desktop variant of KDE Plasma (aarch64, x86_64 or hardware acceleration required!)"
url="https://wiki.postmarketos.org"
arch="noarch"
license="GPL-3.0+"
depends="consolekit2 xorg-server plasma-desktop plasma-settings breeze-icons
    postmarketos-demos kscreen elisa pulseaudio pulseaudio-utils powerdevil
	polkit-kde-agent kwayland-integration postmarketos-artwork-wallpapers
	konsole"
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="start_plasma-desktop.sh qtlogging.ini org.kde.phone.homescreen.js"
options="!check"

package() {
	install -D -m644 "$srcdir"/start_plasma-desktop.sh \
		"$pkgdir"/etc/profile.d/start_plasma-desktop.sh

	install -D -m644 "$srcdir"/qtlogging.ini \
		"$pkgdir"/etc/skel/.config/QtProject/qtlogging.ini

	install -D -m644 "$srcdir"/org.kde.phone.homescreen.js \
		"$pkgdir"/usr/share/plasma/look-and-feel/org.kde.plasma.phone/contents/plasmoidsetupscripts/org.kde.phone.homescreen.js
}
