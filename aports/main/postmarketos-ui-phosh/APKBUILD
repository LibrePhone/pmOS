pkgname=postmarketos-ui-phosh
pkgver=1
pkgrel=0
pkgdesc="(Wayland) Mobile UI developed for the Librem 5"
url="https://puri.sm"
arch="noarch"
license="GPL3+"
depends="phosh"
install="$pkgname.post-install"
source="start_phosh.sh"
options="!check"

