# Contributor:
# Maintainer:
pkgname=libhandy
pkgver=0_git20180727
pkgrel=0
_commit="18952ab91e584b42cccfc076b1d866e7cc1e8fcc"
pkgdesc="A library full of GTK+ widgets for mobile phones"
url="https://code.puri.sm/Librem5/libhandy"
arch="all"
license="LGPL-2.1"
depends=""
depends_dev="libgnome-dev gtk+3.0-dev gobject-introspection-dev"
makedepends="$depends_dev meson pkgconfig vala gtk-doc"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$_commit.tar.gz::https://source.puri.sm/Librem5/$pkgname/-/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cd "$builddir"
	meson . _build --prefix=/usr -Dgtk_doc=true
	ninja -C _build
}

check() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir/" ninja -C _build install
}
